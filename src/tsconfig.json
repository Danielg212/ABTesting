{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es2019",
    "mapRoot": "../dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../dist",
    "sourceMap": true,
    "incremental": true
  },
  "files": [
    "index.ts",
    "app.ts",
    "__tests__/index.spec.ts",
  ],
  "exclude": ["node_modules", "dist"]
}
